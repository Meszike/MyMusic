<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.popey.mymucic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lists.Musictypes" />
        <activity
            android:name=".Activities.PopActivity"
            android:label="@string/category_pop"
            android:parentActivityName=".Lists.Musictypes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lists.Musictypes"/>
        </activity>
        <activity
            android:name=".Activities.RockActivity"
            android:label="@string/category_rock"
            android:parentActivityName=".Lists.Musictypes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lists.Musictypes"/>
        </activity>
        <activity
            android:name=".Activities.JazzActivity"
            android:label="@string/category_jazz"
            android:parentActivityName=".Lists.Musictypes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lists.Musictypes"/>
        </activity>
        <activity
            android:name=".Activities.ClassicalActivity"
            android:label="@string/category_classical"
            android:parentActivityName=".Lists.Musictypes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lists.Musictypes"/>
        </activity>

        <activity
            android:name=".Activities.Player_activity" >
        </activity>


    </application>

</manifest>